<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="movie"
            type="com.tp.tpmovie.model.Movie" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:elevation="@dimen/cardview_default_elevation"
        >

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            >

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/ivMovieCover"
                android:src="@drawable/movie_cover_loading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#88000000"
                android:orientation="vertical"
                android:padding="10dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{movie.title}"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{movie.year}"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{movie.duration}"
                        android:paddingLeft="10dp"
                        />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{movie.synopsis}"
                    />

                <!--3 boutons-->
                <LinearLayout
                    android:layout_gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="fill_vertical"
                    >
                    <ImageButton
                        android:id="@+id/btnViewMovie"
                        android:layout_gravity="bottom"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:backgroundTint="#00FFFFFF"
                        android:tint="#FFF"
                        android:src="@drawable/view_icon"
                        tools:ignore="UseAppTint" />

                    <ImageButton
                        android:id="@+id/btnEditMovie"
                        android:layout_gravity="bottom"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:backgroundTint="#00FFFFFF"
                        android:tint="#FFF"
                        android:src="@drawable/view_icon"
                        tools:ignore="UseAppTint" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</layout>